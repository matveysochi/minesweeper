@{
    ViewBag.Title = "ИГРА";
}

<div id="game">
    <table class="p-2" style="margin: auto">
        <tr>
            <td align="center" class="p-2">
                <button id="time" class="btn btn-outline-secondary"></button>
            </td>
            <td align="center" class="p-2">
            </td>
            <td align="center" class="p-2">
                <button id="mines" class="btn btn-outline-secondary"></button>
            </td>
        </tr>
    </table>

    <table id="field" class="text-center" style="margin: auto">
    </table>
</div>

<div id="statistics" hidden>
    <div class="p-2 m-2 text-center">
        <button id="privateBtn" class="btn btn-primary">Личная</button>
        <button id="publicBtn" class="btn btn-secondary">Общая</button>
    </div>

    <table id="statTable" class="table table-bordered table-striped table-sm">
        <tr>
            <td>Попытки</td>
            <td id="attempts"></td>
        </tr>
        <tr>
            <td>Победа</td>
            <td id="wins"></td>
        </tr>
        <tr>
            <td>Поражение</td>
            <td id="losses"></td>
        </tr>
        <tr>
            <td>Среднее время</td>
            <td id="average"></td>
        </tr>
        <tr>
            <td>Лучшее время</td>
            <td id="best"></td>
        </tr>
        <tr>
            <td>Место</td>
            <td id="position"></td>
        </tr>
    </table>

    <div id="privateStat" class="m-2 p-2 text-center">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Начало</th>
                    <th>Длительность</th>
                    <th>Результат</th>
                </tr>
            </thead>
            <tbody id="privateRecords">
            </tbody>
        </table>
    </div>
    <div id="publicStat" class="m-2 p-2 text-center" hidden>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Место</th>
                    <th>Игрок</th>
                    <th>Длительность</th>
                </tr>
            </thead>
            <tbody id="publicRecords">
            </tbody>
        </table>
    </div>
</div>