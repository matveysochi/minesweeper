<div class="p-2 row align-items-center bg-info">
    <div class="col-1 text-center text-white">
        @ViewContext.HttpContext.User.Identity.Name
    </div>
    <div class="col-3" id="level">
        <button class="p-1 btn btn-primary btn-sm" data-level="0">Новичек</button>
        <button class="p-1 btn btn-secondary btn-sm" data-level="1">Средний</button>
        <button class="p-1 btn btn-secondary btn-sm" data-level="2">Сложный</button>
    </div>
    <div class="col-6"></div>
    <div class="col-2 text-end" id="mode">
        <button class="p-1 btn btn-primary btn-sm" data-mode="0">Игра</button>
        <button class="p-1 btn btn-secondary btn-sm" data-mode="1">Статистика</button>
    </div>
</div>